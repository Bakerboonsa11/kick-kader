rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow users to read and write to their own user document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Announcements collection rules
    match /announcements/{announcementId} {
      // Anyone can read announcements
      allow read: if true;
      
      // Only authenticated users can create announcements
      // Only the author can update or delete their own announcements
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.createdBy;
    }
    
    // Players collection rules
    match /players/{playerId} {
      // Anyone can read players
      allow read: if true;
      
      // Only authenticated users can create player documents
      // Only admins or the player themselves can update
      allow create: if request.auth != null;
      allow update: if request.auth != null && 
        (request.auth.token.admin == true || 
         request.auth.uid == resource.data.userId);
    }
    
    // Default deny all other reads and writes
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
